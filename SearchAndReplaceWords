from docx import Document

def result(a,b):
    for para in document.paragraphs:
        if para.text == a:
            para.text = b

filename = input('Enter the name of the file: ')
document = Document(str(filename) + '.docx')
a = input('Enter the search string: ')
b = input('Enter the replacement string: ')
result(a,b)
document.save(str(filename) + '.docx')

